{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"],
      "faker/*": ["@faker-js/faker/*"],
      "faker": ["@faker-js/faker"]
    },
    "outDir": "./dist",
    "typeRoots": ["types","../../node_modules/@types"]
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
